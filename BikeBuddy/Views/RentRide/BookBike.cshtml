@model BookingViewModel;
@{
    Layout = "_BikeBuddyLayout";
}
<html>
<head>
    <script src="https://cdn.tailwindcss.com">
    </script>
</head>
<body >
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
        <div class="bg-white rounded-lg shadow-lg flex max-w-5xl overflow-hidden">
            <img alt="Bike Image"
                 src="@(Model.BikeDetails.BikeImageBytes != null ? $"data:image/png;base64,{Convert.ToBase64String(Model.BikeDetails.BikeImageBytes)}" : "/images/default-profile.png")"
                 class="object-cover w-[400px] h-[400px]" />

            <div class="p-8 flex flex-col justify-between w-full">
                <h2 class="text-3xl font-bold text-gray-800 mb-6">
                    @Model.BikeDetails.BikeModel
                </h2>

                <p class="text-gray-700 mb-4 text-lg">
                    <span class="font-semibold">Rented Hours:</span>
                    @Model.RentedHours
                </p>

                <p class="text-gray-700 mb-4 text-lg">
                    <span class="font-semibold">Amount:</span>
                    ₹@Model.Amount
                </p>

                <p class="text-gray-700 mb-4 text-lg">
                    <span class="font-semibold">GST (5%):</span>
                    ₹@Model.Gst
                </p>

                <p class="text-gray-700 mb-8 text-lg">
                    <span class="font-semibold">Total Bill:</span>
                    ₹@Model.TotalBill
                </p>

                <button class="w-full bg-orange-500 text-white py-4 rounded-lg font-medium hover:bg-orange-600 transition duration-200 text-lg">
                    Pay
                </button>
            </div>
        </div>
    </div>



</body>
</html>
