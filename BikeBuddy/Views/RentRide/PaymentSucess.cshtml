@model Bike;
<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body >
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-gray-50 p-6 rounded-lg shadow-lg max-w-md text-center">
            <div class="flex items-center justify-center mb-4">
                <i class="fas fa-check-circle text-green-500 text-2xl"></i>
                <span class="ml-2 text-green-500 text-lg font-semibold">Payment Succesfull</span>
            </div>
            <h1 class="text-2xl font-bold mb-2">Thank You</h1>
            <p class="text-gray-700 mb-4">Your bike has been successfully registered for Ride.</p>
            <div class="text-left mb-4">
                <p><span class="font-semibold">Pickup Location</span> :@Model.BikeLocation</p>
                <p><span class="font-semibold">Address</span> : @Model.BikeAddress, @Model.FullAddress</p>
                <p><span class="font-semibold">Contact</span> : @Model.ContactNo</p>
            </div>
            <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4" role="alert">
                <p class="font-semibold">Tip:</p>
                <p>Check your <a asp-controller="User" asp-action="MyRides" class="text-blue-500 underline">Rides History</a> to see the route to your bike's location.</p>
            </div>
            <p class="text-gray-700">Thank you for choosing our service. We hope you enjoy your ride!</p>
            </br>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Homepage</a>
        </div>
    </div>

</body>
</html>
