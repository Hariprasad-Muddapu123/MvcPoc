@model BikeViewModel;
@{
    Layout = "_BikeBuddyLayout";
}
<html>
<head>
    <title>
        Register Your Bike
    </title>
    <script src="https://cdn.tailwindcss.com">
    </script>
</head>
<body class="bg-white">
    
    <div class="flex flex-col justify-center items-center space-y-6 px-8">
        <div>
            <h1 class="text-3xl font-bold text-center text-orange-500">
                Register Your Bike
            </h1>
        </div>
        <div class="flex  justify-center items-center space-x-12">
            <div class=" w-1/3">
                <form asp-action="Rent" asp-controller="RentRide" enctype="multipart/form-data" method="post">
                    <div class="mb-4">
                        <label class="block text-gray-700">Bike Model<span class="text-danger">*</span></label>
                        <input asp-for="BikeModel" class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Bike Model" type="text" />
                    </div>

                    <div class="mb-4">
                        <label class="block text-gray-700">Bike Number<span class="text-danger">*</span></label>
                        <input asp-for="BikeNumber" class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Bike Number" type="text" />
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700">Bike Location<span class="text-danger">*</span></label>
                        <input asp-for="BikeLocation" class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Location" type="text" />
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700">Bike Address<span class="text-danger">*</span></label>
                        <input asp-for="BikeAddress" class="w-full p-2 border border-orange-500 rounded" placeholder="Enter Your Address" type="text" />
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700">Available Upto<span class="text-danger">*</span></label>
                        <input asp-for="AvailableUpto" class="w-full p-2 border border-orange-500 rounded" placeholder="Select a date" type="date" />
                    </div>
                    
                    <div class="mb-4">
                        <label class="block text-gray-700">Bike Image<span class="text-danger">*</span></label>
                        <input asp-for="BikeImage" class="w-full p-2 border border-orange-500 rounded" type="file" />
                    </div>
                    <div class="mb-6">
                        <label class="block text-gray-700">Bike Documents<span class="text-danger">*</span></label>
                        <input asp-for="BikeDocuments" class="w-full p-2 border border-orange-500 rounded" type="file" />
                    </div>
                    <button type="submit" class="w-full bg-orange-500 text-white p-2 rounded hover:bg-orange-600">
                        Register
                    </button>
                </form>
            </div>
            <div class=" w-1/3">
                <img alt="Person registering a bike"
                     class="w-full h-auto rounded-md shadow-md"
                     src="~/Images/rentpage.jpeg" />
            </div>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mt-4">
                <strong>@TempData["Message"]</strong>
            </div>
        }
        <h2 class="text-2xl font-bold text-center text-gray-800">
            Registered Bikes
        </h2>
        @* <div class="flex">
            <div class="bg-gray-100 p-4 rounded shadow-md">
                <img alt="Bike Iamge"
                     src="@(Model.BikeImageBytes != null ? $"data:image/png;base64,{Convert.ToBase64String(Model.BikeImageBytes)}" : "/images/default-profile.png")"
                     class="w-full h-auto mb-4" />
                 <img alt="Yamaha Fascino 125" class="w-full h-auto mb-4" src="~/Images/Fascino 125 FI.webp" />
                <h3 class="text-xl font-bold text-gray-800">@Model.BikeModel</h3>
                <p class="text-gray-700">Available upto: @Model.AvailableUpto</p>
                <p class="text-gray-700">Location: @Model.BikeLocation</p>
                <p class="text-gray-700">Address: @Model.BikeAddress</p>
                <button class="w-full bg-orange-500 text-white p-2 rounded mt-2">Remove</button>
            </div>
            <div class="bg-gray-100 p-4 rounded shadow-md">
                <img alt="Yamaha MT 15" class="w-full h-auto mb-4" src="~/Images/Fascino 125 FI.webp" />
                <h3 class="text-xl font-bold text-gray-800">Yamaha MT 15</h3>
                <p class="text-gray-700">Available upto: 15/11/2024</p>
                <p class="text-gray-700">Location: Hyderabad</p>
                <p class="text-gray-700">Address: Madhapur</p>
                <button class="w-full bg-orange-500 text-white p-2 rounded mt-2">Remove</button>
            </div>
        </div> *@
    </div> 
</body>
</html>

