@{
    string serviceType =(string) @ViewData["ServiceType"];   
}
<html lang="en">
<head>
    <title>Bike Buddy</title>
    <script src="https://cdn.tailwindcss.com">
    </script>
    <script>

        function toggleActive(activeId, inactiveId) {
            document.getElementById(inactiveId).classList.remove("bg-orange-500", "text-white");
            document.getElementById(inactiveId).classList.add("border-orange-500", "text-orange-500");
            document.getElementById(activeId).classList.add("bg-orange-500", "text-white");
            document.getElementById(activeId).classList.remove("border-orange-500", "text-orange-500");
        }
        window.onload = function () {
            const params = new URLSearchParams(window.location.search);
            const serviceType = params.get('type');
            if (serviceType === 'owner') {
                toggleActive('ownerButton', 'riderButton');
            }
            else if (serviceType === 'rider') {
                toggleActive('riderButton', 'ownerButton');
            }
        }
    </script>
</head>
<body class="font-roboto">
    <div class="container mx-auto p-4">
        <div class="flex flex-col md:flex-row items-center justify-center md:justify-between p-8 max-w-6xl mx-auto">
            <div class="flex-1 p-4 text-center md:text-left">
                <h1 class="text-5xl font-bold text-black">
                    Bike
                    <span class="text-orange-500">Buddy</span>
                </h1>
                <p class="text-2xl text-orange-500 mt-2">
                    Rent-Ride
                    <span class="text-black">Earn-Enjoy</span>
                </p>
                <p class="mt-4 text-lg">
                    A platform to connect the "Bike-User" who has need of the bike and "Bike-Owner" rent to earn without any third-party rental shop.
                </p>
                <div class="flex space-x-4  justify-content-center  m-3 rent-group">
                    <a asp-action="Index" asp-controller="RentRide">
                        <button id="rentButton" class="px-12 py-2 border text-white bg-orange-500 rounded-full text-xl">
                            Rent
                        </button>
                    </a>

                    <a asp-action="Index" asp-controller="RentRide">
                        <button id="rideButton" class="px-12 py-2 border border-orange-500 text-orange-500 rounded-full text-xl">
                            Ride
                        </button>
                    </a>
                </div>

            </div>

            <div class="flex-1 p-4 flex items-center justify-center">
                <img alt="Illustration of two bikes with the text 'Bike Buddy' in the background"
                     src="~/Images/MainPageLogo.png"
                     class="w-80 h-auto max-w-full" />
            </div>
        </div>

        <div class="mt-16">
            <h2 class="text-4xl font-bold  ms-lg-6">
                &nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp; Services we providing
            </h2>
            <div class="flex justify-center space-x-4 mt-6 owner-services-group">
                <a href="@Url.Action("Index", "Home", new { type = "owner" })"
                   id="ownerButton"
                   class="px-12 py-2 border text-white bg-orange-500 rounded-full text-xl transition-colors duration-200 hover:bg-orange-600 hover:text-white focus:outline-none focus:ring focus:ring-orange-300"
                   onclick="toggleActive('owner-services-group', 'ownerButton')">
                    Owner Services
                </a>
                <a href="@Url.Action("Index", "Home", new { type = "rider" })"
                   id="riderButton"
                   class="px-12 py-2 border border-orange-500 text-orange-500 rounded-full text-xl transition-colors duration-200 hover:bg-orange-500 hover:text-white focus:outline-none focus:ring focus:ring-orange-300"
                   onclick="toggleActive('owner-services-group', 'riderButton')">
                    Rider Services
                </a>
            </div>

            <div class="mt-8">
                @if (serviceType == "owner")
                {
                    @await Html.PartialAsync("_OwnerServices");
                }
                else if (serviceType == "rider")
                {
                    @await Html.PartialAsync("_RiderService");
                }
            </div>
        </div>
    </div>
</body>
</html>


