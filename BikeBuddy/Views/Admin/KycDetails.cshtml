@model BikeBuddy.ViewModels.AdminDashboardViewModel;
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Kyc Details";
    ViewData["TargetView"] = "KycDetails";
}
<div class="bg-white p-6 rounded shadow-md mb-6 ">
    <div class="flex items-center">
        <img alt="User Icon" class="w-24 h-24 rounded-full mr-6" height="100" src="https://storage.googleapis.com/a1aa/image/EqMPvE9tvc5fcK3EcsMMktjMVCl3RcLmk72ho9Mb7lznt05JA.jpg" width="100" />
        <div>
            <div class="text-xl font-bold">
                Total Users
            </div>
            <div class="text-3xl font-bold">
                @Model.TotalUsers
            </div>
        </div>
        <div class="ml-12">
            <div class="text-xl font-bold">
                KYC Users
            </div>
            <div class="text-3xl font-bold">
                @Model.KycUsers
            </div>
        </div>
        <div class="ml-12">
            <div class="text-xl font-bold">
                Non-KYC Users
            </div>
            <div class="text-3xl font-bold">
                @Model.NonKycUsers
            </div>
        </div>
    </div>
</div>

<div class="bg-white p-6 rounded shadow-md">
    <div class="flex justify-between items-center mb-4">
        <div class="filters mb-4">
            <a asp-action="ByStatus" asp-controller="Admin" asp-route-kycStatus="Pending" method="post" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600">Pending</a>
            <a asp-action="ByStatus" asp-route-kycStatus="Approved" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Approved</a>
            <a asp-action="ByStatus" asp-route-kycStatus="Rejected" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Rejected</a>
        </div>
        <div class="flex justify-between  space-x-1 items-center">
            @await Html.PartialAsync("_SearchForm")
        </div>
    </div>

    <table class="w-full border-collapse">
        <thead>
            <tr class="bg-gray-200">
                <th class="border p-2">SNO</th>
                <th class="border p-2">User Id</th>
                <th class="border p-2">UserName</th>
                <th class="border p-2">Status</th>
                <th class="border p-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users != null && Model.Users.Any())
            {
                int count = 1;
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td class="border p-2">@count</td>
                        <td class="border p-2">@user.Id</td>
                        <td class="border p-2">@user.UserName</td>
                        <td class="border p-2">@user.KycStatus</td>
                        <td class="border p-2">
                            <a asp-action="ViewUserDetails" asp-route-id="@user.Id" class="bg-blue-500 text-white px-4 py-2 rounded">View Details</a>
                            <input type="hidden" name="BikeId" value="@user.Id" />
                        </td>

                    </tr>
                    count++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center border p-2">No users available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
