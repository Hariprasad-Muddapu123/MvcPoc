                    <li><a asp-action="Safety" asp-controller="Home">Safety</a></li>
                    <li ><a asp-controller="RentRide" asp-action="Index">Rent/Ride</a></li>
                    <li class="navbar-nav ml-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
