
@{
    Layout = null;
}

<html>
<head>
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body class="bg-gray-100">
    <div class="flex flex-col min-h-screen">
        <header class="flex items-center justify-between bg-white p-4 shadow">
            <div class="flex items-center">
                <img alt="Logo" class="h-10 w-10" height="50" src="~/Images/nav_logo.png" width="50" />
                <h1 class="ml-2 text-gray-500">
                    Admin Home
                </h1>
            </div>
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Admin
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <form asp-action="Logout" asp-controller="Admin" method="post">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form> 
                </ul>
            </div>
        </header>
        <div class="flex h-screen">
            <!-- Sidebar -->
            <aside class="w-1/5 bg-[#D9D9D9] border-r">
                <nav class="flex flex-col p-4">
                    <a class="flex items-center p-2 mb-4 text-gray-700 hover:bg-gray-200 rounded" href="/Admin/Index">
                        <i class="fas fa-home mr-2"></i>
                        Home
                    </a>
                    <a asp-controller="Admin" asp-action="UserDetails" class="flex items-center p-2 mb-4 text-gray-700 hover:bg-gray-200 rounded">
                        <i class="fas fa-users mr-2"></i>
                        Users
                    </a>
                    <a asp-controller="Admin" asp-action="KycDetails" class="flex items-center p-2 mb-4 text-gray-700 hover:bg-gray-200 rounded">
                        <i class="fas fa-id-card mr-2"></i>
                        KYC Approvals
                    </a>
                    <a asp-controller="Admin" asp-action="BikeDetails" class="flex items-center p-2 mb-4 text-gray-700 hover:bg-gray-200 rounded">
                        <i class="fas fa-motorcycle mr-2"></i>
                        Bike Approval
                    </a>
                </nav>
            </aside>
            <main class="flex-1 overflow-auto p-6 bg-gray-100">
                <div class="container mx-auto">
                    @RenderBody()
                </div>
            </main>
        </div>

        <footer class="bg-black text-white p-6 mt-auto">
            <div class="flex justify-between">
                <div>
                    <h3 class="font-bold mb-2">
                        BIKE BUDDY
                    </h3>
                    <ul>
                        <li>
                            <a class="hover:underline" href="#">
                                Home
                            </a>
                        </li>
                        <li>
                            <a class="hover:underline" href="#">
                                About Us
                            </a>
                        </li>
                        <li>
                            <a class="hover:underline" href="#">
                                Safety
                            </a>
                        </li>
                        <li>
                            <a class="hover:underline" href="#">
                                Contact Us
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h3 class="font-bold mb-2">
                        FOLLOW US
                    </h3>
                    <div class="flex space-x-4">
                        <a class="hover:text-gray-400" href="#">
                            <i class="fab fa-facebook-f">
                            </i>
                        </a>
                        <a class="hover:text-gray-400" href="#">
                            <i class="fab fa-twitter">
                            </i>
                        </a>
                        <a class="hover:text-gray-400" href="#">
                            <i class="fab fa-instagram">
                            </i>
                        </a>
                        <a class="hover:text-gray-400" href="#">
                            <i class="fab fa-youtube">
                            </i>
                        </a>
                        <a class="hover:text-gray-400" href="#">
                            <i class="fab fa-linkedin">
                            </i>
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
