<form method="get" asp-action="SearchByUsername" class="flex justify-between items-center mb-4">
    <div class="relative">
        <input class="w-full p-2 border border-gray-300 rounded-lg"
               type="text" name="Username"
               placeholder="Search by Username"
               value="@Context.Request.Query["Username"]" />
        <button class="absolute right-0 top-0 mt-2 mr-2 text-gray-500">
            <i class="fas fa-search"></i>
        </button>
    </div>
    <button type="submit" class="bg-orange-500 text-white px-4 py-2 rounded"
            name="Username" value="">
        Search
    </button>
</form>
